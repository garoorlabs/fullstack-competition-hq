# Database Configuration (matches docker-compose.yml settings)
# Spring Boot reads these via application.yml
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/leaguehq
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-at-least-256-bits-long

# Stripe Configuration (use test keys from https://dashboard.stripe.com/test/apikeys)
# Property names match application.yml: stripe.api-key, stripe.webhook-secret, stripe.connect.client-id
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id_here

# AWS S3 / Cloudflare R2 (for photo uploads)
AWS_REGION=us-east-1
AWS_S3_BUCKET=leaguehq-photos-dev
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_ENDPOINT=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
